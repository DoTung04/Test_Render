<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollViewMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingTop="60dp"
                android:paddingBottom="11dp"
                android:layout_marginBottom="7dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/appTitleLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="19dp"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_back_home_page"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="93dp"
                        android:src="@drawable/icon_back"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/appTitleText"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Read Book App" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/headerDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#000000"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical" />

                <!-- Search Bar -->
                <LinearLayout
                    android:id="@+id/searchBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/edittext_background"
                    android:paddingVertical="9dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginHorizontal="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/searchHintText"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Name..." />

                    <ImageView
                        android:id="@+id/searchIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/search_icon"
                        android:scaleType="fitXY" />
                </LinearLayout>
            </LinearLayout>

            <!-- Banner Section -->
            <RelativeLayout
                android:id="@+id/bannerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="51dp"
                android:layout_marginHorizontal="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mainBannerImage"
                        android:layout_width="match_parent"
                        android:layout_height="225dp"
                        android:src="@drawable/h1_slide_show"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/secondaryBannerImage"
                    android:layout_width="420dp"
                    android:layout_height="224dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="389dp"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <!-- Category Section -->
            <LinearLayout
                android:id="@+id/categoryHeaderLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/categoryTitle"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Category" />

                <TextView
                    android:id="@+id/viewAllCategories"
                    android:textColor="#FF00E5"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="View all" />
            </LinearLayout>

            <!-- Category Items -->
            <LinearLayout
                android:id="@+id/categoryListLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/horrorCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/category_background"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/horrorImage"
                        android:layout_width="138dp"
                        android:layout_height="89dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/honor_image"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/horrorText"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="40dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Horror" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fantasyCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/category_background"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fantasyImage"
                        android:layout_width="138dp"
                        android:layout_height="89dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/honor_image"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/fantasyText"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="40dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Fantasy" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mysteryCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/category_background"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mysteryImage"
                        android:layout_width="138dp"
                        android:layout_height="89dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/honor_image"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/mysteryText"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="40dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Mystery" />
                </LinearLayout>
            </LinearLayout>

            <!-- New Books Section -->
            <LinearLayout
                android:id="@+id/newBooksHeaderLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/newBooksTitle"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="New books" />

                <TextView
                    android:id="@+id/viewAllNewBooks"
                    android:textColor="#FF00E5"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="View all" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/newBooksListLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/horrorNewBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/category_background"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/horrorNewBookImage"
                        android:layout_width="138dp"
                        android:layout_height="89dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/honor_image"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/horrorNewBookText"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="40dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Horror" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fantasyNewBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/category_background"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fantasyNewBookImage"
                        android:layout_width="138dp"
                        android:layout_height="89dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/honor_image"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/fantasyNewBookText"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="40dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Fantasy" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mysteryNewBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/category_background"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mysteryNewBookImage"
                        android:layout_width="138dp"
                        android:layout_height="89dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/honor_image"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/mysteryNewBookText"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="40dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Mystery" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/historyNewBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/category_background"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/historyNewBookImage"
                        android:layout_width="138dp"
                        android:layout_height="89dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/honor_image"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/historyNewBookText"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="40dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="History" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>