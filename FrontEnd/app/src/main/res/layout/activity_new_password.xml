<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scroll_view_new_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/header_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingTop="58dp"
                android:paddingBottom="6dp"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/header_row_new_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="19dp"
                    android:layout_marginStart="11dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/back_button_new_password"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="117dp"
                        android:src="@drawable/icon_back"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/title_new_password"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="New Password"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/divider_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#000000"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/new_password_input_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/label_enter_new_password"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Enter New Password"
                    />
                <EditText
                    android:inputType="textPassword"
                    android:hint="8 symbols at least"
                    android:id="@+id/edit_text_new_password"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginBottom="36dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:paddingVertical="17dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="36dp"
                    />
                <TextView
                    android:id="@+id/label_confirm_password"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Confirm Password"
                    />
                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/edit_text_confirm_password"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginBottom="36dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:paddingVertical="17dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="36dp"
                    android:hint="Confirm your new password"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/submit_button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/rounded_button"
                android:paddingVertical="17dp"
                android:layout_marginBottom="100dp"
                android:layout_marginHorizontal="20dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_submit_button"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Submit"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>